<div class='games-index-title'>
  <h3>Games</h3>
</div>

<ul class='games'>
  <% games.forEach(function (game) { %>
    <div>
      <a href="#/games/<%= games.id %>">
        <% if (game.image) { %>
          <img src='<%= game.image.thumb_url %>'/>
        <% } %>
        <span class='title'>
          <%= game.name %>
        </span>
      </a>
    </div>
  <% }); %>
</ul>
