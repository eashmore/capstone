  background-color: black;
  color: white;
}

.bold {
  font-weight: bold;
}

//Splash Page
.splash-bg {
  width: 103%;
  height: 500px;
  right: 1%;
  background-color: black;
  position: relative;
}

.logo {
  height: 600px;
}

.new-sess-form {
  position: relative;
  top: -50px;
}

.guest-sess-form {
  position: relative;
  top: -50px;
}

//Home Page
  //Games
  .game-thumb {
    position: relative;
    height: 220px;
  }

  .homepage-boxart {
    width: 150px;
    border: 1px black solid;
    border-radius: 2px;
    box-shadow: 0px 0px 5px #98f5ff;
  }

  .homepage-boxart:hover {
    opacity: 0.2;
    box-shadow: 0px 0px 15px #fff;
  }

  .homepage-game-title {
    position: absolute;
    z-index: -100;
    width: 150px;
    top: 15px;
  }

  .homepage-avg-score {
    position: relative;
    z-index: -100;
    bottom: 50px;
  }

  //Recomendation Feed
  .rec-feed {
    border-right: 2px gray solid;
    height: 1050px;
    right: 15px;
  }

  .feed-item {
    position: relative;
    margin: 5px;
    width: 400px;
    left: 50px;
  }

  .feed-prof-pic {
    width: 40px;
    height: 40px;
    border: 2px #222223 solid;
    border-radius: 25px;
  }

  .feed-text {
    min-height: 40px;
  }

  .feed-hr {
    margin-top: 5px;
    margin-bottom: 0px;
  }

// Game Page
  // Game Info
  .game-boxart {
    width: 355px;
    border: 1px black solid;
    border-radius: 3px;
    box-shadow: 0px 0px 5px #98f5ff;
    margin-top: 15px;
  }

  .game-score {
    margin: 10px;
  }

  //Game Reviews
  .review-body {
    word-wrap: break-word;
    position: relative;
    top: -2em;
  }

  a.edit-review {
    position: relative;
    top: -10px;
  }

  //Review Form
  .m-content {
    z-index: 101;
    border-radius: 3px;
    position: fixed;
    margin-top: 3em;
    left: 21%;
    width: 60em;
  }

  .m-content.profile {
    overflow: scroll;
    top: 1em;
    max-height: 50em;
  }

  .m-backdrop {
    position: fixed;
    background-color: rgba(20, 20, 20, .8);
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 68;
  }


