  @import "bootstrap-sprockets";
  @import "bootswatch/superhero/variables";
  @import "bootstrap";
  body {
    padding-top: 60px;
    background: url('<%= asset_path("blue_body_bg.jpg") %>') center top repeat-y #000000;
    background-color: black;
    color: white !important;
  }
  @import "bootswatch/superhero/bootswatch";
  @import 'slick';

  nav.nav {
    background-color: #171a21;
    color: white;
    border: 1px;
  }

  .navbar-default .navbar-nav>li>a.nav-link {
    color: #b8b6b4;
  }

  .navbar-default .navbar-nav>li>a.nav-link:hover {
    color: #ffffff;
  }

  .navbar-default .navbar-nav>li>a#profile-dropdown {
    color: #b8b6b4;
  }

  .navbar-default .navbar-nav>li>a#profile-dropdown:hover {
    color: #ffffff;
  }

  .game-left-col {
    margin-top: 15px;
  }

  .game-thumb {
    min-height: 200px;
    width: 150px;
    margin: 5px;
  }

  .game-thumb-profile {
    min-height: 175px;
    width: 125px;
  }

  .game-thumb-search {
    height: 225px;
    width: 150px;
    margin: 5px;
  }

  .prof-box:hover {
    opacity: 1;
    box-shadow: 0px 0px 15px #fff;
  }

  .prof-box {
    opacity: 0.8;
    box-shadow: 0px 0px 5px #98f5ff
  }

  .search-boxart {
    opacity: 0.8;
    box-shadow: 0px 0px 5px #98f5ff
  }

  .search-boxart:hover {
    opacity: 1;
    box-shadow: 0px 0px 15px #fff;
  }

  .box-art {
    // max-height: 400px;
    width: 355px;
    border: 1px black solid;
    border-radius: 3px;
    box-shadow: 0px 0px 5px #98f5ff
  }

  #profile-dropdown {
    margin-right: 10px;
    margin-left: 15px;
  }

  .search-boxart {
    max-height: 160px;
    border: 1px black solid;
    border-radius: 2px;
  }

  .index-boxart {
    width: 145px;
    border: 1px black solid;
    border-radius: 2px;
    box-shadow: 0px 0px 5px #98f5ff;

  }

  #edit-review {
    position: relative;
    top: -10px;
  }

  .star-rating {
    max-width: 140px;
  }

  .review-body {
    word-wrap: break-word;
    position: relative;
    top: -2em;
  }

  .box {
    height: 160px;
  }

  .box-divider {
    margin: 5px;
  }

  .box-divider.index {
    position: relative;
    top: 40px;
  }

  .loading-img {
    height: 150px;
  }

  #e-button {
    margin-left: 9px;
  }

  #feed-item {
    margin: 5px 5px 5px 0px;
    min-height: 40px;
    padding-left: 5px;
    width: 340px;
    position: relative;
    right: 95px;
  }

  .m-content {
    z-index: 101;
    // background-color: white;
    border-radius: 3px;
    // padding: 20px;
    position: fixed;
    /* margin: 0 auto; */
    margin-top: 3em;
    left: 21%;
    width: 60em;
  }

  .m-backdrop {
    position: fixed;
    background-color: rgba(170, 169, 176, .5);
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 68;
  }

  #rec-div {
    border-right: 1px gray solid;
    height: 1300px;
    right: 20px;
  }

  .nav-drop {
    top: 20px;
    margin-top: 8px;
  }

  div.thumbnail {
    border: 1px;
    background-color: rgba(0, 0, 0, 0);
    color: white;
  }

  #feed-prof-pic {
    width: 40px;
    height: 40px;
    position: relative;
    right: 10px;
    border: 2px gray solid;
    border-radius: 25px;
  }

  .nav-prof-pic {
    height: 50px;
    width: 50px;
    top: -15px;
    position: relative;
    left: -15px;
    border: 2px #e7e7e7 solid;
    border-radius: 25px;
  }

  .prof-link {
    height: 50px;
    max-width: 50px;
  }

  .spacer {
    width: 50px
  }

  .rec-rec {
    right: 50px;
    position: relative;
  }

  .user-index-pic {
    max-width: 100px;
  }

  .profile-picture {
    border: 3px gray solid;
    border-radius: 5px;
    height: 400px;
    width: 400px;
  }

  .feed-hr {
    margin-top: 5px;
    margin-bottom: 0px;
  }

  span.game-title.index {
    position: relative;
    top: -150px;
    z-index: -1;
    color: white;
  }

  span.caption.game-title {
    color: white;

  }

  #my-thumbs-list{
    overflow: auto;
    width: 800px;
    height: 300px;
  }

  .feed-text {
    min-height: 40px;
  }

  div.panel.css-panel {
    background-color: #45556c;
    border-color: gray;
    border: 1px;
  }

  div.panel-heading.css-panel-head {
    background-color: black;
    color: white;
    border-color: gray;
    border: 1px;
  }

  div.panel-footer.css-panel-foot {
    background-color: black;
    color: white;
    border-color: gray;
    border: 1px;
  }

  textarea {
    color: black !important;
  }

  .col-delete {
    position: relative;
    right: -1px;
  }

  .wl-delete {
    position: relative;
    right: 3px;
  }

  .slick-slide {
    width: 170px;
  }

  img.slick-slide {
    height: 200px;
  }

  div.autoplay0 {
    z-index: -10;
    opacity: 0.3;
    position: fixed;
    top: 0;
    left: 0;
  }

  div.autoplay1 {
    z-index: -10;
    opacity: 0.3;
    position: fixed;
    top: 200px;
    left: 0;
  }

  div.autoplay2 {
    z-index: -10;
    opacity: 0.3;
    position: fixed;
    top: 400px;
    left: 0;
  }

  div.autoplay3 {
    z-index: -10;
    opacity: 0.3;
    position: fixed;
    top: 600px;
    left: 0;
  }

  div.autoplay4 {
    z-index: -10;
    opacity: 0.3;
    position: fixed;
    top: 800px;
    left: 0;
  }

  div.new-session {
    bottom: 0;
    top: 0;
    position: fixed;
  }

  .profile-game-buffer {
    min-height: 240px;
  }

  .rate {
    position: relative;
    bottom: 10px;
    // z-index: -10;
  }

  a>div.star-rating {
    position: relative;
    top: -50px;
    z-index: -10;
  }

  .user-idx-recs {
    position: relative;
    top: 2em;
    left: 3em;
  }

  .user-idx {
    position: relative;
    top: -11px;
    left: 11px;
  }
