<div class='new-session text-center'>
  <img class='logo' src="http://res.cloudinary.com/dqucbuno8/image/upload/c_scale,h_720/v1434830178/goodgames-logo2_sbhe9i.png" />

  <form class='new-sess-form' action="<%= session_url %>" method="post">
  <h3>Sign In</h3>

    <input type="hidden" name="authenticity_token" value= "<%= form_authenticity_token %>" >

    <div class="form-group">
      <label>
        Username
        <input type="text" class="form-control" name="user[username]" value="guest">
      </label>
    </div>

    <div class="form-group">
      <label>
        Password
        <input type="password" class="form-control" name="user[password]" value="password">
      </label>
    </div>

    <input type="submit" class="btn btn-default btn-success" value="Sign In">
    <a href="../users/new">
      <input type="button" class="btn btn-default btn-success" value="Sign Up">
    </a>

  </form>


  <% 5.times do |idx| %>

  <div class="autoplay<%= idx.to_s %>">
    <% Game.all.shuffle.each do |game| %>
      <img class="splash-box" src="<%= game.boxart_url %>"/>
    <% end %>
  </div>

  <% end %>
</div>
