<!DOCTYPE html>
<html>
<head>
  <title>GoodgamesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/star-rating.min.scss" media="all" rel="stylesheet" type="text/css" />
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="/assets/utils/star-rating.js" type="text/javascript"></script>

  <script>
    window.GIANTBOMB = {
      api_key: '<%= ENV['giantbomb_api_key'] %>'
    }
  </script>

</head>
<body>

<div class="container">
  <% if !signed_in? %>
    <%= link_to "Sign In", new_session_url %><br>
    <%= link_to "Sign Up", new_user_url %>
  <% end %>

  <br>

  <%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

  <%= yield %>
</div>

</body>
</html>
